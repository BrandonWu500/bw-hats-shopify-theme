<footer class='bg-slate-600 text-orange-200' aria-labelledby='footer-heading'>
  <h2 id='footer-heading' class='sr-only'>Footer</h2>
  <div class='mx-auto max-w-7xl pb-8 px-4 sm:px-6 lg:px-8 pt-16 sm:pt-24 lg:pt-32'>
    {% comment %} Links {% endcomment %}
    {% comment %}
      <ul class='flex w-full flex-col items-center justify-between gap-6 py-6 font-body text-lg xl:flex-row xl:gap-8'>
        {% for link in linklists.footer.links %}
          <li>
            <a href='{{ link.url }}' class='hover:text-orange-300'>
              {{- link.title -}}
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endcomment %}
    <div class='xl:grid xl:grid-cols-3 xl:gap-8'>
      <a href='/'>
        <span class='sr-only'>BW Hats</span>
        {% render 'logo', class: 'w-auto h-7' %}
      </a>
      <div class='mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0'>
        <div class='md:grid md:grid-cols-2 md:gap-8'>
          <div>
            <h3 class='font-medium leading-6'>Products</h3>
            <ul role='list' class='mt-6 space-y-4'>
              {% for link in linklists.products.links %}
                <li>
                  <a
                    href='{{ link.url }}'
                    class='text-orange-100 hover:text-orange-300 leading-6'
                  >
                    {{- link.title -}}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
          <div class='mt-16 md:mt-0'>
            <h3 class='font-medium leading-6'>Customer Service</h3>
            <ul role='list' class='mt-6 space-y-4'>
              {% for link in linklists['customer-service'].links %}
                <li>
                  <a
                    href='{{ link.url }}'
                    class='text-orange-100 hover:text-orange-300 leading-6'
                  >
                    {{- link.title -}}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class='md:grid md:grid-cols-2 md:gap-8'>
          <div>
            <h3 class='font-medium leading-6'>Company</h3>
            <ul role='list' class='mt-6 space-y-4'>
              {% for link in linklists.company.links %}
                <li>
                  <a
                    href='{{ link.url }}'
                    class='text-orange-100 hover:text-orange-300 leading-6'
                  >
                    {{- link.title -}}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
          <div class='mt-16 md:mt-0'>
            <h3 class='font-medium leading-6'>Legal</h3>
            <ul role='list' class='mt-6 space-y-4'>
              {% for link in linklists.legal.links %}
                <li>
                  <a
                    href='{{ link.url }}'
                    class='text-orange-100 hover:text-orange-300 leading-6'
                  >
                    {{- link.title -}}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </div>

    {% comment %} Newsletter {% endcomment %}
    <div class='mt-16 sm:mt-20 lg:mt-24 mb-8 w-full border-t border-orange-200 pt-8 lg:flex lg:items-center lg:justify-between'>
      <div>
        <h3 class='font-medium leading-6 text-orange-200'>
          Subscribe to our newsletter
        </h3>
        <p class='mt-2 leading-6 text-orange-100'>
          The latest news, articles, and resources, sent to your inbox weekly.
        </p>
      </div>
      {% form 'customer', class: 'mt-6 sm:flex sm:max-w-md lg:mt-0' %}
        <label htmlFor='email-address' class='sr-only'> Email address </label>
        <input
          type='email'
          name='contact[email]'
          id='email-address'
          autoComplete='email'
          required
          class='w-full min-w-0 appearance-none rounded-md border-0 bg-white px-3 py-1.5 text-base text-slate-700 shadow-sm ring-1 ring-inset ring-slate-400 placeholder:text-slate-500 focus:ring-2 focus:ring-inset focus:ring-orange-200 sm:w-56 sm:text-sm sm:leading-6'
          placeholder='Enter your email'
        >
        <div class='mt-4 sm:ml-4 sm:mt-0 sm:flex-shrink-0'>
          <button
            type='submit'
            class='flex w-full items-center justify-center rounded-md bg-orange-200 px-3 py-2 text-sm font-medium text-slate-600 shadow-sm hover:bg-orange-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-200'
          >
            Subscribe
          </button>
        </div>
      {% endform %}
    </div>

    {% comment %} Copyright and Social Links {% endcomment %}
    <div class='mt-8 border-t border-orange-200 pt-8 md:flex md:items-center md:justify-between w-full'>
      <div class='flex space-x-6 md:order-2'>
        <a href='https://twitter.com/BW_Hats' target='_blank'>
          {% render 'icon-twitter', class: 'h-6 w-6 hover:text-orange-300' %}
        </a>
        <a
          href='https://www.facebook.com/people/BW-Hats/61553078035122'
          target='_blank'
        >
          {% render 'icon-facebook', class: 'h-6 w-6 hover:text-orange-300' %}
        </a>
        <a href='https://www.instagram.com/bw.hats' target='_blank'>
          {% render 'icon-instagram', class: 'h-6 w-6 hover:text-orange-300' %}
        </a>
        <a href='https://www.tiktok.com/@bw.hats' target='_blank'>
          {% render 'icon-tiktok', class: 'h-6 w-6 hover:text-orange-300' %}
        </a>
      </div>
      <p class='mt-8 leading-5 text-orange-200 md:order-1 md:mt-0'>
        Â© 2023 BW Hats Inc. All rights reserved.
      </p>
    </div>
  </div>
</footer>
