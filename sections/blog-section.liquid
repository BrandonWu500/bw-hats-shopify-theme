<div class='mx-auto max-w-7xl p-6 lg:p-8 mb-6'>
  <div class='mx-auto max-w-2xl text-center'>
    <h2 class='capitalize text-3xl font-semibold font-heading tracking-tight text-slate-700 sm:text-4xl'>
      From the blog
    </h2>
    <p class='mt-2 text-lg leading-8 text-slate-600'>
      Keep up with the latest fashion trends in the hat world.
    </p>
  </div>
  <div class='mx-auto mt-6 lg:mt-8 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-6 lg:mx-0 lg:max-w-none lg:grid-cols-3'>
    {% for article in blogs.news.articles limit: 3 %}
      <article class='flex flex-col items-start justify-between border-t border-slate-700/10 pt-8 lg:pt-0 lg:border-0'>
        <div class='relative w-full'>
          <img
            srcset='
              {{ article.image | image_url: width: 400 }} 400w,
              {{ article.image | image_url: width: 600 }} 600w
            '
            src='{{ article.image |  image_url: width: 600  }}'
            alt='{{ article.image.alt | escape }}'
            class='aspect-[16/9] w-full rounded-2xl bg-slate-200 object-cover sm:aspect-[2/1] lg:aspect-[3/2]'
            sizes='
              (max-width: 425px) 400px,
              600px
            '
            loading='lazy'
            width='{{ article.image.width }}'
            height='{{ article.image.height }}'
          >
          <div
            class='absolute inset-0 rounded-2xl ring-1 ring-inset ring-slate-700/10'
          ></div>
        </div>
        <div class='max-w-xl'>
          <div class='mt-8 flex items-center gap-x-4 text-xs'>
            <time datetime='{{ article.published_at }}' class='text-slate-500'>
              {{- article.published_at | date: '%B %d, %Y' -}}
            </time>
            <span
              class='relative z-10 rounded-full bg-slate-50 px-3 py-1.5 text-slate-700'
            >
              {{- article.tags[0] -}}
            </span>
          </div>
          <div class='group relative'>
            <h3 class='mt-3 text-lg font-medium leading-6 text-slate-700 group-hover:text-slate-600'>
              <a href='{{ article.url }}'>
                <span class='absolute inset-0'></span>
                {{ article.title }}
              </a>
            </h3>
            <p class='mt-5 line-clamp-3 text-sm leading-6 text-slate-600'>
              {{ article.excerpt }}
            </p>
          </div>
          <div class='relative mt-4 flex items-center gap-x-4'>
            {% if article.user.image %}
              <img
                src='{{ article.user.image |  image_url: width: 40, height: 40 }}'
                alt=''
                class='h-10 w-10 rounded-full bg-slate-100'
                loading='lazy'
                width='40'
                height='40'
              >
            {% endif %}
            <div class='text-sm leading-6'>
              <p class='font-medium text-slate-700'>
                <a href='#'>
                  <span class='absolute inset-0'></span>
                  {{ article.user.name }}
                </a>
              </p>
              <p class='text-slate-600'>
                {{ article.user.bio }}
              </p>
            </div>
          </div>
        </div>
      </article>
    {% endfor %}

    <!-- More posts... -->
  </div>
</div>
