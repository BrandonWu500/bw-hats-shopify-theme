<div class='bg-white py-16'>
  <div class='mx-auto max-w-7xl px-6 lg:px-8'>
    <div class='mx-auto max-w-2xl lg:max-w-4xl'>
      <h1 class='text-3xl text-center font-semibold font-heading tracking-tight text-slate-700 sm:text-4xl'>
        The Blog
      </h1>
      <p class='mt-2 text-lg text-center leading-8 text-slate-600'>
        Keep up with the latest fashion trends in the hat world.
      </p>
      <div class='mt-16 space-y-20 lg:mt-20 lg:space-y-20'>
        {% for article in blogs.news.articles %}
          <article class='relative isolate flex flex-col gap-8 lg:flex-row'>
            <div class='relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0'>
              <img
                srcset='
                  {{ article.image | image_url: width: 400 }} 400w,
                  {{ article.image | image_url: width: 600 }} 600w
                '
                src='{{ article.image |  image_url: width: 600  }}'
                alt='{{ article.image.alt | escape }}'
                sizes='
                  (max-width: 425px) 400px,
                  600px
                '
                width='{{ article.image.width }}'
                height='{{ article.image.height }}'
                class='absolute inset-0 h-full w-full rounded-2xl bg-slate-50 object-cover'
              >
              <div
                class='absolute inset-0 rounded-2xl ring-1 ring-inset ring-slate-700/10'
              ></div>
            </div>
            <div>
              <div class='flex items-center gap-x-4 text-xs'>
                <time
                  datetime='{{ article.published_at }}'
                  class='text-slate-500'
                >
                  {{- article.published_at | date: '%B %d, %Y' -}}
                </time>
                <span
                  class='relative z-10 rounded-full bg-slate-50 px-3 py-1.5 text-slate-700'
                >
                  {{- article.tags[0] -}}
                </span>
              </div>
              <div class='group relative max-w-xl'>
                <h3 class='mt-3 text-lg font-medium leading-6 text-slate-700 group-hover:text-slate-600'>
                  <a href='{{ article.url }}'>
                    <span class='absolute inset-0'></span>
                    {{ article.title }}
                  </a>
                </h3>
                <p class='mt-5 text-sm leading-6 text-slate-600'>
                  {{ article.excerpt }}
                </p>
              </div>
              <div class='mt-6 flex border-t border-slate-700/5 pt-6'>
                <div class='relative flex items-center gap-x-4'>
                  {% if article.user.image %}
                    <img
                      src='{{ article.user.image |  image_url: width: 40 }}'
                      alt=''
                      class='h-10 w-10 rounded-full bg-slate-100'
                      width='40'
                      height='40'
                    >
                  {% endif %}

                  <div class='text-sm leading-6'>
                    <p class='font-medium text-slate-700'>
                      <a href='#'>
                        <span class='absolute inset-0'></span>
                        {{ article.user.name }}
                      </a>
                    </p>
                    <p class='text-slate-600'>{{ article.user.bio }}</p>
                  </div>
                </div>
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
